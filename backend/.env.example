# Server Configuration
PORT=8080
HOST=0.0.0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Git Configuration
GIT_TERMINAL=dumb
GIT_ASKPASS=echo
GIT_SSH_COMMAND=ssh -o StrictHostKeyChecking=no

# Temporary Directory
TEMP_DIR=/tmp/chartimpact

# Timeouts (in seconds)
COMPARE_TIMEOUT=120
VERSIONS_TIMEOUT=60
GIT_CLONE_TIMEOUT=120
HELM_TIMEOUT=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Dyff Configuration (set to false to disable dyff and use simple diff)
DYFF_ENABLED=true
